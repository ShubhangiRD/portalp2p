										</suggestionItems>
									</Input>
								</layout:VerticalLayout>
							
								<layout:VerticalLayout class="sapUiSmallMarginBeginEnd" fieldGroupIds="Ekorgc" visible="{VisibleModel>/isVisiblePurOrg}">
