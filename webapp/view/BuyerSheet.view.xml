			<viz:Popover id="idPopOverline"></viz:Popover>
			<viz:VizFrame id="idVizFrameline" uiConfig="{applicationSet:'fiori'}" vizProperties="{ title: {text : 'Stock vs Sales', visible : true}}"  height='100%' width="100%" vizType='timeseries_line'>
				<viz:dataset>
					<viz.data:FlattenedDataset data="{oMonthlydataModel>/}">
						<viz.data:dimensions>
							<viz.data:DimensionDefinition name="Date" value="{Erdat}" dataType="date"/>
						</viz.data:dimensions>
						<viz.data:measures>
							<viz.data:MeasureDefinition name="Quantity" value="{Kwmeng}"/>
						</viz.data:measures>
					</viz.data:FlattenedDataset>
				</viz:dataset>
				<viz:feeds>
					<viz.feeds:FeedItem uid="valueAxis" type="Measure" values="Quantity"/>
					<viz.feeds:FeedItem uid="timeAxis" type="Dimension" values="Date"/>
				</viz:feeds>
			</viz:VizFrame>
		</layout:flexContent>
