	<Table id="idSkuTable" inset="false" items="{oSkuModel2>/}" mode="MultiSelect" selectionChange="onExcessSelectionItem"
		class="tileLayout">
		<headerToolbar>
			<OverflowToolbar>
				<!--<HBox width="50%">-->
					
			
					<Button icon="sap-icon://nav-back" visible="{range>/isNoPhone}"  press="onSkuBack"/>
				<Title text="No Movement SKU" tooltip="sku with no movements" >
					<layoutData>
						<ToolbarLayoutData shrinkable="false"/>
					</layoutData>
				</Title>
					<!--</HBox>-->
				
				<ToolbarSpacer></ToolbarSpacer>
			
				<Label visible="{range>/isNoPhone}" text="Select Hours/Month:"/>
		
				<RadioButton text="Last 3 Months"  selected="{oCheckModel>/Last3}" select="OnSelectRButton" id="id3mnthRd">
		
				</RadioButton>
				<RadioButton tooltip="Last 6 Months" text="Last 6 Months"  selected="{oCheckModel>/Last6}" select="OnSelectRButton" id="id6mnthRd">
	
				</RadioButton>
				<Button id="idSearchSku" text="Show" press="onSkuListFetch" type="Emphasized">
					<layoutData>
				<OverflowToolbarLayoutData priority="AlwaysOverflow"/>
			</layoutData>
				</Button>
		
			</OverflowToolbar>
		</headerToolbar>
		<infoToolbar>
			<OverflowToolbar>
				<!--<HBox id="idHBoxAddPrp">-->
				<Label text="Material" required="true"  />
				<Input id="idSkuMaterial" placeholder="Material No" width="12%" showSuggestion="true" showValueHelp="true" 
					valueHelpRequest="handlePOMaterialHelp" value="{oskuFilterModel>/Material}" liveChange="Validate"
					suggestionItems="{ path: 'Lookup>/MaterialList' }" suggestionItemSelected="onSuggest" >
					<suggestionItems>
						<core:ListItem key="{Lookup>Materialno}" text="{Lookup>Description}" additionalText="{Lookup>Materialno}"/>
					</suggestionItems>
					<layoutData>
								<OverflowToolbarLayoutData
					shrinkable="true"
					minWidth = "200px"/>
			</layoutData>
				</Input>
				<Label text="From" required="true"  class="sapUiTinyMarginBegin"/>
				<DatePicker id="idSkuDateRange1" width="15%" placeholder="Enter Date" valueFormat="yyyy.MM.dd" value="{oskuFilterModel>/Range1}">
						<layoutData>
								<OverflowToolbarLayoutData
					shrinkable="true"
					minWidth = "200px"/>
	
			</layoutData>
					</DatePicker>
				<Label text="To" required="true"  class=" sapUiTinyMarginBegin"/>
				<DatePicker id="idSkuDateRange2" width="15%" placeholder="Enter Date" change="handleChangeDate" valueFormat="yyyy.MM.dd"
					value="{oskuFilterModel>/Range2}" >
					<layoutData>
								<OverflowToolbarLayoutData
					shrinkable="true"
					minWidth = "200px"/>
			</layoutData>
		
	
					</DatePicker>
			
				<!--</HBox>-->
					<ToolbarSpacer/>

				<Button icon="sap-icon://refresh" press="onRefreshTable" tooltip="Refresh"/>
				<Button tooltip="{i18n>addItem}" text="Process Order" press="onProcessOrder"/>
				<Button tooltip="{i18n>addItem}" text="Discount" class="sapUiTinyMarginEnd" press="onDiscountMaterial"/>
		
			</OverflowToolbar>
		</infoToolbar>
		<columns>
			<Column width="5em" minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
				<Text text="Material"/>
			</Column>
			<Column width="12em" minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
				<Text text="Description"/>
			</Column>
			<Column width="4em" minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
				<Text text="Plant"/>
			</Column>
			<Column width="8em" minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
				<Text text="PO Number"/>
			</Column>
			<Column width="8em" minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
				<Text text="Last Purchase Order Date"/>
			</Column>
			<Column width="8em" minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
				<Text text="SO Number"/>
			</Column>
			<Column width="8em" minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
				<Text text="Last Sales Order Date"/>
			</Column>
			<!--		<Column
				hAlign="End">
				<Text text="Price" />
			</Column>-->
		</columns>
		<items>
			<ColumnListItem vAlign="Middle">
				<cells>
					<ObjectIdentifier title="{oSkuModel2>Matnr}"/>
					<ObjectIdentifier title="{oSkuModel2>Maktx}"/>
					<ObjectIdentifier title="{oSkuModel2>Werks}"/>
					<ObjectIdentifier title="{oSkuModel2>Ebeln}"/>
					<ObjectIdentifier title="{ path: 'oSkuModel2>Bedat', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'yyyy-MM-dd' } }"/>
					<ObjectIdentifier title="{oSkuModel2>Vbeln}"/>
					<ObjectIdentifier title="{ path: 'oSkuModel2>Audat', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'yyyy-MM-dd' } }"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
