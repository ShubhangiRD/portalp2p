<mvc:View controllerName="com.vSimpleApp.controller.StockTransfer" xmlns:t="sap.ui.table" xmlns:mvc="sap.ui.core.mvc"
	xmlns:card="sap.f.cards" xmlns:form="sap.ui.layout.form" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns="sap.uxap" xmlns:m="sap.m"
	xmlns:tnt="sap.tnt" xmlns:u="sap.ui.unified" class="sapUiSizeCompact" height="100%" displayBlock="true">
	<m:Page showNavButton="true" navButtonPress="onBackStock">
		<ObjectPageLayout id="ObjectPageLayout" showFooter="true" showTitleInHeaderContent="true" alwaysShowContentHeader="false"
			preserveHeaderStateOnScroll="false" headerContentPinnable="true" isChildPage="true" upperCaseAnchorBar="false">
			<headerTitle>
				<!--	<m:ObjectStatus text="Document {PONO>/Ebeln}  does not contain any selectable items" state="Error"/>
				-->
				<ObjectPageDynamicHeaderTitle >
					<expandedHeading>
						<m:Avatar src="./test-resources/sap/uxap/images/imageID_275314.png" class="sapUiTinyMarginEnd"/>
						<m:FlexBox fitContainer="true" alignItems="Center">
							<m:HBox>
								<m:Title text="Stock Transfer"/>
								<m:ObjectMarker type="Favorite" class="sapUiTinyMarginBegin"/>
							</m:HBox>
						</m:FlexBox>
					</expandedHeading>
					<snappedHeading>
						<m:FlexBox fitContainer="true" alignItems="Center">
							<m:Avatar src="./test-resources/sap/uxap/images/imageID_275314.png" class="sapUiTinyMarginEnd"/>
							<m:Title text="Stock Transfer"/>
						</m:FlexBox>
					</snappedHeading>
					<expandedContent>
						<!--<m:ObjectStatus text="Document {AllDataModel>/PONO} does not contain any selectable items" visible="{visiblemodel>/isvisible}"-->
						<!--	id="iderroritem" state="Error"/>-->
					</expandedContent>
					<snappedContent>
						<!--<m:ObjectStatus text="Document {AllDataModel>/PONO} does not contain any selectable items" visible="{visiblemodel>/isvisible}" state="Error"/>-->
					</snappedContent>
					<actions>
						<ObjectPageHeaderActionButton text="Cancel" type="Transparent" hideText="false" press="onStockCancel"/>
						<ObjectPageHeaderActionButton text="Save" type="Emphasized" hideText="false" press="onStockTransfer"/>
					</actions>
				</ObjectPageDynamicHeaderTitle>
			</headerTitle>
			<headerContent></headerContent>
			<sections>
				<ObjectPageSection titleUppercase="false" title="General Information" id="general">
					<subSections>
						<ObjectPageSubSection>
							<blocks>
								<form:SimpleForm id="FormLumpSum" editable="true" layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="4" labelSpanM="12"
									labelSpanS="12" adjustLabelSpan="false" columnsXL="3" columnsL="3" columnsM="1" singleContainerFullSize="false">
									<form:content>
										<core:Title text=" "/>
										<m:Label text="Header text"/>
										<m:Input type="Text" id="HeaderTxt" editable="{EditModel>/isEditable}" value="{PurchaseModel>/TempContract/HeaderTxt}"></m:Input>
										<m:Label text="GR Slip No"/>
										<m:Input type="Text" id="GrGiSlipNo" editable="{EditModel>/isEditable}" value="{PurchaseModel>/TempContract/GrGiSlipNo}"></m:Input>
										<m:Label text="Material Slip"/>
										<m:Input type="Text" id="idMatSlip" editable="{EditModel>/isEditable}" value="{PurchaseModel>/TempContract/BillOfLading}"/>
										<core:Title text=" "/>
										<m:Label text="Document Date"/>
										<m:DateTimePicker id="DocDate" editable="{EditModel>/isEditable}" value="{PurchaseModel>/TempContract/DocDate}"/>
										<m:Label text="Posting Date"/>
										<m:DateTimePicker id="PstngDate" editable="{EditModel>/isEditable}" value="{PurchaseModel>/TempContract/CreatDate}"/>
									</form:content>
								</form:SimpleForm>
							</blocks>
						</ObjectPageSubSection>
					</subSections>
				</ObjectPageSection>
				<ObjectPageSection titleUppercase="false" title="Transfer Posting">
					<subSections>
						<ObjectPageSubSection>
							<blocks>
								<core:Fragment fragmentName="com.vSimpleApp.fragment.Stock.StockTransfer" type="XML"/>
							</blocks>
						</ObjectPageSubSection>
					</subSections>
				</ObjectPageSection>
				<ObjectPageSection titleUppercase="false" title="Line Items">
					<subSections>
						<ObjectPageSubSection>
							<blocks>
								<core:Fragment fragmentName="com.vSimpleApp.fragment.Stock.LineItem" type="XML"/>
							</blocks>
						</ObjectPageSubSection>
					</subSections>
				</ObjectPageSection>
			</sections>
		</ObjectPageLayout>
	</m:Page>
</mvc:View>