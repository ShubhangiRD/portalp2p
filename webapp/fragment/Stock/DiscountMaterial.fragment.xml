<core:FragmentDefinition xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:mvc="sap.ui.core.mvc" class="sapUiSizeCompact"
	xmlns:core="sap.ui.core" xmlns="sap.m">
	<Dialog title="Discount" showHeader="true" id="idExcessDiscountDialog" afterClose="onAfterClose" class="sapUiSizeCompact fragmentHeading"
		contentWidth="400px" contentHeight="200px">
		<VBox class="sapUiSmallMargin">
			<f:Form id="FormChange354" editable="true">
				<f:layout>
					<f:ResponsiveGridLayout labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="3" adjustLabelSpan="false" emptySpanXL="2" emptySpanL="2"
						emptySpanM="2" emptySpanS="2" columnsXL="2" columnsL="2" columnsM="2" singleContainerFullSize="false"/>
				</f:layout>
				<f:formContainers>
					<f:FormContainer>
						<f:formElements>
									<f:FormElement label="Sales Org">
											<f:fields>
										<Input id="idSaleorg" editable="{EditModel>/isEditable}" textFormatMode="KeyValue" 
										value="{oSalesModel>/SalesOrg}"	showSuggestion="true" showValueHelp="true" valueHelpRequest="handleSalesorgvalue"
											suggestionItems="{ path: 'Lookup>/shipdetails'}" >
											<suggestionItems>
												<core:ListItem key="{Lookup>Vkorg}" text="{Lookup>Vtweg}" additionalText="{Lookup>Vtweg}"/>
											</suggestionItems>
										</Input>
											</f:fields>
										</f:FormElement>
							<f:FormElement label="Material">
								<f:fields>
									<Input id="idMateial" value ="{SingleExcessData>/Matnr}"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="Description">
								<f:fields>
									<Input id="idMatDesc" value="{SingleExcessData>/Description}"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="Amount">
								<f:fields>
									<Input id="idDiscount"    description="%" value = "{SingleExcessData>/DiscAmt}"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="Valid From">
								<f:fields>
									<DatePicker id="idDateFrom"  valueFormat="yyyy.MM.dd" placeholder="Enter Date" change="handleChangeDate" 
									value = "{SingleExcessData>/ValidDate}"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="Valid To">
								<f:fields>
									
								<!--	<DatePicker id="abcf" valueFormat="yyyy.MM.dd" change="handleChange"/>-->
									<DatePicker id="idDateTo" placeholder="Enter Date" change="handleChangeDate"  valueFormat="yyyy.MM.dd" 
										value = "{SingleExcessData>/ValidTo}"/>
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>
				</f:formContainers>
			</f:Form>
		</VBox>
		<beginButton>
			<Button text="Save" type="Emphasized" press="onSaveDiscount"/>
		</beginButton>
		<endButton>
			<Button text="Cancel" press="onCancelDiscount"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>