<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.ui.table" xmlns:mvc="sap.ui.core.mvc" xmlns:u="sap.ui.unified" xmlns:m="sap.m"
	height="100%" xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<m:ScrollContainer width="100%" horizontal="true" vertical="true" focusable="true">
		<Table id="deliverypattern" selectionMode="None" rows="{oDeliveryPattern>/}" visibleRowCount="7" enableCellFilter="{ui>/cellFilterOn}"
			filter="filterPrice" ariaLabelledBy="title">
			
			
				<extension>
				<m:OverflowToolbar >
					<m:Title id="title" text="Vendor Delivery Pattern"/>
					<m:ToolbarSpacer/>
					<m:Select id="select" items="{modes>/items}" selectedKey="Navigation" change="onBehaviourModeChange">
						<core:Item key="{modes>key}" text="{modes>text}"/>
					</m:Select>
					<!--	<m:ToggleButton
							icon="sap-icon://complete"
							tooltip="Show available products only"
							press="toggleAvailabilityFilter"
							pressed="{ui>/availabilityFilterOn}"/>
						<m:ToggleButton
							icon="sap-icon://grid"
							tooltip="Enable / Disable Cell Filter Functionality"
							pressed="{ui>/cellFilterOn}"/>-->
						<!--	//onDataExport-->
					<m:Button icon="sap-icon://download" press="onExport"/>
					<!--<m:Button icon="sap-icon://full-screen" press="TableFullScreen"/>-->
					<m:Button icon="sap-icon://decline" tooltip="Clear all filters" press="clearAllFiltersPOtable"/>
					<m:ToolbarSeparator/>
					<m:SearchField placeholder="Filter" value="{ui>/globalFilter}" search="onSearchEbeln" width="15rem"/>
				</m:OverflowToolbar>
			</extension>
		
			<columns>
				<Column width="11rem" hAlign="Center" filterProperty="Ebeln" defaultFilterOperator="StartsWith">
					<m:Label text="Purchase Order"/>
					<template >
						<m:Text text="{oDeliveryPattern>Ebeln}" custom:Ebeln="{oDeliveryPattern>Ebeln}" wrapping="false"/>
					</template>
				</Column>
				<Column width="9rem" hAlign="Center">
					<m:Label text="Material no"/>
					<template>
						<m:Text text="{oDeliveryPattern>Matnr}"/>
					</template>
				</Column>
				<Column width="9rem" hAlign="Center">
					<m:Label text="Material Discription"/>
					<template>
						<m:Text text="{oDeliveryPattern>Txz01}"/>
					</template>
				</Column>
				<Column width="9rem" hAlign="Center" sortProperty="Lifnr" filterProperty="Lifnr">
					<m:Label text="Vendor Number "/>
					<template>
						<m:Text text="{oDeliveryPattern>Lifnr}" wrapping="false"/>
					</template>
				</Column>
				<Column width="9rem" hAlign="Center">
					<m:Label text="Purchase Grp"/>
					<template>
						<m:Text text="{oDeliveryPattern>Ekgrp}" wrapping="false"/>
					</template>
				</Column>
				<Column id="idPurchaseOrg" width="9rem" hAlign="Center" filterProperty="Ekorg">
					<m:Label text="Purchase Org"/>
					<template>
						<m:Text text="{oDeliveryPattern>Ekorg}" wrapping="false"/>
					</template>
				</Column>
				<Column id="iddate" width="9rem" hAlign="Center" filterProperty="Erdat">
					<m:Label text="Created On"/>
					<template>
						<m:Text text="{path: 'oDeliveryPattern>Erdat', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'yyyy-MM-dd' } }" wrapping="false"/>
					</template>
				</Column>
				<Column width="9rem" hAlign="Center">
					<m:Label text="Quantity"/>
					<template>
						<m:Text text="{oDeliveryPattern>Menge}"/>
					</template>
				</Column>
				<Column width="9rem" hAlign="Center">
					<m:Label text="Plant"/>
					<template>
						<m:Text text="{oDeliveryPattern>Werks}"/>
					</template>
				</Column>
				<Column width="9rem" hAlign="Center">
					<m:Label text="Sales Order"/>
					<template>
						<m:Text text="{oDeliveryPattern>Vbeln}"/>
					</template>
				</Column>
				<Column width="9rem" hAlign="Center">
					<m:Label text="Sales Order Qunt"/>
					<template>
						<m:Text text="{oDeliveryPattern>Lfimg}"/>
					</template>
				</Column>
			</columns>
			<footer>
				<m:OverflowToolbar id="infobar"></m:OverflowToolbar>
			</footer>
		</Table>
	</m:ScrollContainer>
</core:FragmentDefinition>