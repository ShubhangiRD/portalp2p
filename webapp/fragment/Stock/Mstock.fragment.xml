<core:FragmentDefinition xmlns="sap.ui.table" xmlns:mvc="sap.ui.core.mvc" xmlns:m="sap.m" xmlns:u="sap.ui.unified" xmlns:core="sap.ui.core">
	<TreeTable id="TreeTableBasic2" rows="{path:'oStockDataModel>/', parameters: {arrayNames:['MultipleIt','Plant']}}" enableSelectAll="false"
		ariaLabelledBy="title">
		<columns>
					<Column width="13rem">
				<m:Label text="Company Code"/>
				<template>
	
					<m:Text text="{oStockDataModel>CompanyCode}" wrapping="false"/>
				</template>
			</Column>
	
			
				<Column width="9rem">
				<m:Label text="Material"/>
				<template>

					<m:Text text="{oStockDataModel>Matnr}"/>
				</template>
			</Column>
			
					<Column width="9rem">
				<m:Label text="Plant"/>
				<template>
					<m:Text text="{oStockDataModel>Werks}"/>
				</template>
			</Column> 
			
			<Column width="13rem">
				<m:Label text="Available Quantity"/>
				<template>
					<m:ObjectNumber number="{oStockDataModel>Labst}"
						state="{ parts: [ {path: 'oStockDataModel>Labst'}, {path: 'oStockDataModel>Red'}, {path: 'oStockDataModel>Yellow'}, {path: 'oStockDataModel>Green'}, {path: 'oStockDataModel>Blue'}, {path: 'oStockDataModel>Matnr'} ], formatter: '.formatter.statusColor' }"/>
				</template>
			</Column>
			<Column width="13rem" sorted="true">
				<m:Label text="Critical Threshold"/>
				<template>
					<m:ObjectNumber number="{ path : 'oStockDataModel>Red' }" state="Error"></m:ObjectNumber>
				</template>
			</Column>
			<Column width="13rem" sorted="true">
				<m:Label text="Warrning Threshold"/>
				<template>
					<m:ObjectNumber number="{ path : 'oStockDataModel>Yellow' }" state="Warning"></m:ObjectNumber>
				</template>
			</Column>
			<Column width="13rem" sorted="true">
				<m:Label text="Green Threshold"/>
				<template>
					<m:ObjectNumber number="{ path : 'oStockDataModel>Green' }" state="Success"></m:ObjectNumber>
				</template>
			</Column>
			<Column width="13rem" sorted="true">
				<m:Label text="Excess Threshold"/>
				<template>
					<m:ObjectNumber number="{ path : 'oStockDataModel>Blue' }" state="Information"/>
				</template>
			</Column>
			<!--<Column width="13rem">-->
			<!--	<m:Label text="Previous Threshold"/>-->
			<!--	<template>-->
			<!--		<m:Text text="{oStockDataModel>PreviousThread}" wrapping="false"/>-->
			<!--	</template>-->
			<!--</Column>-->
			<Column width="13rem" sorted="true" visible="false">
				<m:Label text="Color"/>
				<template>
					<m:ObjectIdentifier title="{path: 'oStockDataModel>Color'}"/>
				</template>
			</Column>
			<Column width="13rem">
				<m:Label text="Date"/>
				<template>
					<m:Text text="{ path: 'oStockDataModel>Changedon', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'yyyy-MM-dd' } }"
						wrapping="false"/>
				</template>
			</Column>
		</columns>
	</TreeTable>
</core:FragmentDefinition>